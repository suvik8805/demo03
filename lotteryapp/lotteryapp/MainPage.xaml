<Page
    x:Class="lotteryapp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:lotteryapp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="176,157,0,0" TextWrapping="Wrap" Text="Number of draws:" VerticalAlignment="Top" Height="32" Width="179" />
        <TextBox x:Name="RowsTextbox" HorizontalAlignment="Left" Height="32" Margin="407,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="84"/>
        <Button x:Name="DrawButton" Content="Draw" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="245,233,0,0"/>
        <Button x:Name="ClearButton" Content="Clear" HorizontalAlignment="Left" Margin="348,233,0,0" VerticalAlignment="Top" Click="ClearButton_Click"/>
        <TextBlock x:Name="ResultBlock" HorizontalAlignment="Left" Margin="182,347,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="337" Width="358"/>
        <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="176,301,0,0" TextWrapping="Wrap" Text="Random Numbers:" VerticalAlignment="Top" Height="22" Width="148"/>

    </Grid>
</Page>
